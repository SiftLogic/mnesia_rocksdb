%% -*- erlang-mode -*-
os:putenv("ERLANG_ROCKSDB_OPTS", "-DWITH_LZ4=ON -DWITH_SNAPPY=ON"),
os:putenv("ERLANG_ROCKSDB_BUILDOPTS", "-j 6"),
case os:getenv("DEBUG") of
    "true" ->
	Opts = proplists:get_value(erl_opts, CONFIG, []),
	lists:keystore(erl_opts, 1, CONFIG,
		       [{d,'DEBUG'} | Opts -- [{d,'DEBUG'}]]);
    _ ->
	CONFIG
end.
